<link rel="stylesheet" href="/css/form-general.css">

<h1> <%= title %> </h1>
<%- messages() %>

<% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<div class="form-container">
<form id="editInfoForm" method="POST" action="/account/edit-info">
    <label for="account-firstname">First Name</label>
    <input type="text" name="account_firstname" id="account-firstname" required value="<%= locals.accountData ? locals.accountData.account_firstname : "" %>">

    <label for="account-lastname">Last Name</label>
    <input type="text" name="account_lastname" id="account-lastname" required value="<%= locals.accountData ? locals.accountData.account_lastname : "" %>">

    <label for="account-email">Email Address</label>
    <input type="email" name="account_email" id="account-email" required value="<%= locals.accountData ? locals.accountData.account_email : "" %>">

    <button type="submit">Update Information</button>

    <input type="hidden" name="account_id" value="<%= locals.accountData ? locals.accountData.account_id : "" %>">
</form>
</div>

<div class="form-container">
    <form id="editPasswordForm" method="POST" action="/account/edit-password">
        <label for="account-password">Password:</label> 
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character.</span> 
        <input type="password" name="account_password" id="account-password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        
        <label for="account-password-confirm">Confirm New Password</label>
        <input type="password" name="account_password_confirm" id="account-password-confirm" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="submit">Change Password</button>

        <input type="hidden" name="account_id" value="<%= locals.accountData ? locals.accountData.account_id : "" %>">
    </form>
</div>